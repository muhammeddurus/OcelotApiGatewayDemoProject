@model IEnumerable<Entities.Dto.ProductDto>

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-lg-4 col-md-6 text-center">
            <div class="single-product-item">
                <div class="product-image">
                    <a href="~/Product/Details/@item.Id"><img src="@item.ImageUrlBig" alt=""></a>
                </div>
                <h3>@item.Name</h3>
                <p class="product-price"><span>@item.Quantity </span>@item.Price$ </p>
                <input type="submit" value="SepeteEkle" class="btn btn-default" />
                <a href="~/Product/Details/@item.Id" class="cart-btn"><i class="fas fa-shopping-cart"></i> Add to Cart</a>
            </div>
        </div>
    }


</div>